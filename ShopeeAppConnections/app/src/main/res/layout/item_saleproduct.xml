<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp"
    android:layout_width="160dp"
    android:layout_height="230dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/anhgiamgia"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_media_24" />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Laptop with a very long name that needs to be truncated"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemgiabd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Gia:250000d"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:id="@+id/phantramgiam"
            android:background="@drawable/saleh"
            android:layout_gravity="top|right"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>