<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFF00" /> <!-- Yellow background -->
            <corners android:radius="50dp" /> <!-- Rounded corners -->
        </shape>
        <scale
            android:left="1dp"
            android:right="1dp"
            android:top="1dp"
            android:bottom="1dp"

            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:pivotX="50%"
            android:pivotY="50%">
        </scale>
        <color android:color="#FFFFFF" /> <!-- White text -->
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFF00" /> <!-- Yellow background -->
            <corners android:radius="50dp" /> <!-- Rounded corners -->
        </shape>
        <scale
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:pivotX="50%"
            android:pivotY="50%">
        </scale>
        <color android:color="#FFFFFF" /> <!-- White text -->
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background -->
        </shape>
        <color android:color="#FFFF00" /> <!-- Yellow text -->

        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="10dp" /> <!-- Adjust the radius for the background roundness -->
        </shape>
    </item>

</selector>
